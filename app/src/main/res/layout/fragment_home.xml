<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/home_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.viewpager.widget.ViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/harvest_layout"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_harvest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경작체험"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/makeing_layout"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_making"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="만들기체험"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/living_layout"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_living"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생활체험"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/nature_layout"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_nature"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자연체험"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tradition_layout"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_tradition"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전통체험"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/etc_layout"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_etc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/recommend_layout"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home_recommend"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천마을"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/all_layout"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home_all"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전국일주"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:contentPaddingLeft="5dp"
        tools:ignore="MissingConstraints" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/made_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text="홍길동"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mail_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text = "E-Mail"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/made_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text="example@example.com"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/git_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text="GitHub"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/made_git"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text="github.com/example"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aff_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text="소속"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/made_aff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mapo"
                android:gravity="center_vertical"
                android:text="OO대학교 OO학과"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/made_img"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_weight="40"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|right"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="MissingConstraints" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>